<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".entrenamiento.FragmentRutina">

<ListView
    android:id="@+id/listaRutinas"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/btnCrearRutina"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnCrearRutina"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_btns"
    android:text="@string/crear"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    tools:ignore="VisualLintButtonSize"
    app:layout_constraintEnd_toStartOf="@id/btnEliminarRutina"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/listaRutinas"
    app:layout_constraintBottom_toTopOf="@+id/btnModificarRutina"/>


<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnEliminarRutina"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_btns"
    android:text="@string/eliminar"
    android:textColor="@color/white"
    android:textSize="18sp"
    tools:ignore="VisualLintButtonSize"
    app:layout_constraintBottom_toTopOf="@id/btnModificarRutina"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/btnCrearRutina"
    app:layout_constraintTop_toBottomOf="@id/listaRutinas"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnModificarRutina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/layout_btns"
        android:text="@string/modificar_rutina"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCrearRutina"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>